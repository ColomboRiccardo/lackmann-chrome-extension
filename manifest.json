{
  "manifest_version": 3,
  "name": "Lackmann Extension",
  "description": "This is an extension for the lackmann.shop website",
  "version": "1.0",
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png"
  },
  "side_panel": {
    "default_path": "index.html"
  },
  "action": {
    "default_title": "Click to open side panel",
    "default_icon": "./images/icon-16.png"
  },
  "permissions": [
    "sidePanel",
    "activeTab",
    "scripting",
    "webRequest",
    "storage"
  ],
  "host_permissions": ["*://lackmann.shop/*"],
  "background": {
    "service_worker": "service-worker.js"
  }
}
